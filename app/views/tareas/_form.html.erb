   <%= f.text_area :detalles, rows: 5 %>
 </div>
  <div class="field">
   <%= f.label :responsable_id %><br />
   <%= f.select(:responsable_id, Responsable.all.map{|a|[a.nombre, a.id]}) %>
 </div>
